{
  "name": "@headless-charts/react",
  "version": "0.2.2",
  "description": "React wrapper for headless-charts",
  "author": "Vonnue dev team",
  "keywords": [
    "react",
    "headless-charts",
    "charts"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hacklehub/headless-charts.git"
  },
  "type": "module",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js"
    }
  },
  "packageManager": "yarn@4.0.2",
  "scripts": {
    "start": "tsc -w",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest --watch --reporter verbose --ui --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "publish": "vite build && npm publish"
  },
  "dependencies": {
    "d3": "^7.9.0"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.3",
    "@storybook/addon-docs": "^10.1.5",
    "@storybook/addon-links": "^10.1.5",
    "@storybook/addon-themes": "^10.1.5",
    "@storybook/react": "^10.1.5",
    "@storybook/react-vite": "^10.1.5",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/d3": "^7.4.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-istanbul": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-storybook": "^10.1.5",
    "jsdom": "^27.3.0",
    "postcss": "^8.5.6",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "storybook": "^10.1.5",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vite": "^7.2.7",
    "vite-plugin-dts": "^4.5.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.15"
  }
}
